{
    "name": "uiprotect-dev",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    "remoteUser": "app",
    "features": {},
    "postCreateCommand": "poetry install --with dev --no-interaction --no-ansi && poetry run uiprotect --install-completion bash || true",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.defaultInterpreterPath": "/usr/local/bin/python3"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker"
            ]
        }
    }
}
